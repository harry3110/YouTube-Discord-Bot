{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}